<!DOCTYPE html>
<html>
  <head>
    <title>Projecttasks</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>
   <center>
   <h1>Project Shedule</h1>
    <%= link_to "New",projects_insert_url %>
    <%= link_to "Show",projects_show_url %>
    <%= link_to "Multi tasks",projects_update_tasks_url %>
    <%= link_to "Show All tasks",projects_showtasks_url %>
<% if user_signed_in? %>
  <li>
  <%= link_to('Logout', destroy_user_session_path, method: :delete) %>        
  </li>
<% else %>
  <li>
  <%= link_to('Login', new_user_session_path)  %>  
  </li>
<% end %>
    <br>
    <% if flash[:notice] %>
      <%= flash[:notice] %>
    <% end %>
    <div
  class="fb-like"
  data-share="true"
  data-width="450"
  data-show-faces="true">
</div>
</div>    
    <%= yield %>
  </body>
</html>
